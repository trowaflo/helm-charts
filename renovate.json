{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules":[
    {
      "groupName": "all minor",
      "matchManagers": "helmv3",
      "matchUpdateTypes": ["minor","patch"]
    },
    {
      "groupName": "all major",
      "matchManagers": "helmv3",
      "matchUpdateTypes": ["major"]
    }
  ]
}
